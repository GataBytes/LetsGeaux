generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

CREATE TABLE User (
  id: INTEGER PRIMARY KEY AUTO_INCREMENT NOT NULL,
  username: VARCHAR(255),
  email: VARCHAR(255),
  isVerified: BOOLEAN,
  phoneNum: VARCHAR(255),
  isNotified: BOOLEAN,
);